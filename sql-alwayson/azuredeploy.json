{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subnetIdPrimary": {
      "type": "string"
    },
    "subnetIdSecondary": {
      "type": "string"
    },
    "cloudWitnessLocation": {
      "type": "string",
       "allowedValues": [
        "Australia Central", 
         "Australia Central 2", 
         "Australia East", 
         "Australia Southeast"
      ],
      "defaultValue": "Australia East"
    },
    "primaryLocation": {
      "type": "string",
       "allowedValues": [
        "Australia Central", 
         "Australia Central 2", 
         "Australia East", 
         "Australia Southeast"
      ],
      "defaultValue": "Australia East"
    },
    "secondaryLocation": {
      "type": "string",
       "allowedValues": [
        "Australia Central", 
         "Australia Central 2", 
         "Australia East", 
         "Australia Southeast"
      ],
      "defaultValue": "Australia Southeast"
    },
    "nodeIpAddressesPrimary": {
      "type": "array",
      "defaultValue": [
        "10.2.0.10",
        "10.2.0.11"
      ]
    },
    "nodeIpAddressesSecondary": {
      "type": "array",
      "defaultValue": [
        "10.3.0.10",
        "10.3.0.11"
      ]
    },

    "clusterIpAddress": {
      "type": "string",
      "defaultValue": "10.2.0.30"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "EnterpriseAdmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string",
      "defaultValue": "nab2.com"
    },
    "sqlVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS4_v2"
    },
    "sqlVmImagePublisher": {
      "type": "string",
      "defaultValue": "MicrosoftSqlServer"
    },
    "sqlVmImageOffer": {
      "type": "string",
      "defaultValue": "SQL2017-WS2016"
    },
    "sqlVmImageSku": {
      "type": "string",
      "defaultValue": "Enterprise"
    }
  },
  "variables": {
    "diagStorageAccountName": "[concat(uniquestring(resourceGroup().id), 'sqlvmdiag')]",
    "cloudWitnessStorageAccountName": "[concat(uniquestring(resourceGroup().id), 'sqlw')]",
    "HASetNameP": "SqlHASetP",
    "HASetNameS": "SqlHASetS",
    "SqlVmPrefixP": "SQLP",
    "SqlVmPrefixS": "SQLS",
    "baseUri": "[deployment().properties.templateLink.uri]",
    "SQLPrepareModuleURL": "[uri(variables('baseUri'), 'DSC/PrepareSQLServer.ps1.zip')]",
    "SQLPrepareFunction": "PrepareSQLServer.ps1\\SQLServerPrepareDsc",
    "windowsVmTemplateURL": "[uri(variables('baseUri'),'../primitives/windowsvm.json')]",
    "LBName": "SQLLB",
    "LBBEName": "[concat(variables('LBName'),'BE')]",
    "LBFEName": "[concat(variables('LBName'),'FE')]",
    "LBProbeName": "[concat(variables('LBName'),'Probe')]",
    "sqlBEAddressPoolID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/backendAddressPools/',variables('LBBEName'))]",
    "sqllbFEConfigID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/frontendIPConfigurations/',variables('LBFEName'))]",
    "sqllbProbeID": "[concat(resourceId('Microsoft.Network/loadBalancers',variables('LBName')),'/probes/',variables('LBProbeName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('diagStorageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('primaryLocation')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('cloudWitnessStorageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('cloudWitnessLocation')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "name": "[variables('HASetNameP')]",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[parameters('primaryLocation')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [],
      "properties": {
        "platformUpdateDomainCount": 2,
        "platformFaultDomainCount": 2
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
        "name": "[variables('HASetNameS')]",
        "type": "Microsoft.Compute/availabilitySets",
        "location": "[parameters('secondaryLocation')]",
        "apiVersion": "2017-03-30",
        "dependsOn": [],
        "properties": {
          "platformUpdateDomainCount": 2,
          "platformFaultDomainCount": 2
        },
        "sku": {
          "name": "Aligned"
        }
      },
    {
      "name": "[variables('LBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2017-10-01",
      "location": "[parameters('primaryLocation')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[variables('LBFEName')]",
            "properties": {
              "privateIPAddress": "[parameters('clusterIpAddress')]",
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[parameters('subnetIdPrimary')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('LBBEName')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "SQLLBRule",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[variables('sqllbFEConfigID')]"
              },
              "backendAddressPool": {
                "id": "[variables('sqlBEAddressPoolID')]"
              },
              "probe": {
                "id": "[variables('sqllbProbeID')]"
              },
              "frontendPort": 1433,
              "backendPort": 1433,
              "enableFloatingIP": true,
              "idleTimeoutInMinutes": 4,
              "protocol": "Tcp",
              "loadDistribution": "Default"
            }
          }
        ],
        "probes": [
          {
            "name": "[variables('LBProbeName')]",
            "properties": {
              "protocol": "Tcp",
              "port": 59999,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    },
    {
      "name": "[concat('SqlVmDeployP', copyindex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]",
        "[resourceId('Microsoft.Network/loadBalancers', variables('LBName'))]"
      ],
      "copy": {
        "name": "sqlvmloop",
        "count": 2
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[concat(variables('SqlVmPrefixP'), copyindex())]"
          },
          "vmSize": {
            "value": "[parameters('sqlVmSize')]"
          },
          "subnetId": {
            "value": "[parameters('subnetIdPrimary')]"
          },
          "fixedPrivateIp": {
            "value": "[parameters('nodeIpAddressesPrimary')[copyIndex()]]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', variables('HASetNameP'))]"
          },
          "imagePublisher": {
            "value": "[parameters('sqlVmImagePublisher')]"
          },
          "imageOffer": {
            "value": "[parameters('sqlVmImageOffer')]"
          },
          "imageSku": {
            "value": "[parameters('sqlVmImageSku')]"
          },
          "LoadBalancerBEId": {
            "value": "[variables('sqlBEAddressPoolID')]"
          }
        }
      }
    },
    {
      "name": "[concat('SqlVmDeployS', copyindex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]",
        "[resourceId('Microsoft.Network/loadBalancers', variables('LBName'))]"
      ],
      "copy": {
        "name": "sqlvmloop",
        "count": 2
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[concat(variables('SqlVmPrefixS'), copyindex())]"
          },
          "vmSize": {
            "value": "[parameters('sqlVmSize')]"
          },
          "subnetId": {
            "value": "[parameters('subnetIdSecondary')]"
          },
          "fixedPrivateIp": {
            "value": "[parameters('nodeIpAddressesSecondary')[copyIndex()]]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', variables('HASetNameS'))]"
          },
          "imagePublisher": {
            "value": "[parameters('sqlVmImagePublisher')]"
          },
          "imageOffer": {
            "value": "[parameters('sqlVmImageOffer')]"
          },
          "imageSku": {
            "value": "[parameters('sqlVmImageSku')]"
          },
          "LoadBalancerBEId": {
            "value": "[variables('sqlBEAddressPoolID')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat('Primary',variables('SqlVmPrefixP'), copyindex(), '/SqlIaasExtension')]",
      "location": "[parameters('primaryLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', concat('SqlVmDeployP', copyindex()))]"
      ],
      "copy": {
        "name": "sqliaasextensionsloop",
        "count": 2
      },
      "properties": {
        "type": "SqlIaaSAgent",
        "publisher": "Microsoft.SqlServer.Management",
        "typeHandlerVersion": "1.2",
        "autoUpgradeMinorVersion": "true",
        "settings": {
          "AutoTelemetrySettings": {
            "Region": "[parameters('primaryLocation')]"
          },
          "AutoPatchingSettings": {
            "PatchCategory": "WindowsMandatoryUpdates",
            "Enable": true,
            "DayOfWeek": "Sunday",
            "MaintenanceWindowStartingHour": "2",
            "MaintenanceWindowDuration": "60"
          },
          "KeyVaultCredentialSettings": {
            "Enable": false,
            "CredentialName": ""
          },
          "ServerConfigurationsManagementSettings": {
            "SQLConnectivityUpdateSettings": {
              "ConnectivityType": "Private",
              "Port": "1433"
            },
            "SQLWorkloadTypeUpdateSettings": {
              "SQLWorkloadType": "GENERAL"
            },
            "SQLStorageUpdateSettings": {
              "DiskCount": "1",
              "NumberOfColumns": "1",
              "StartingDeviceID": "2",
              "DiskConfigurationType": "NEW"
            },
            "AdditionalFeaturesServerConfigurations": {
              "IsRServicesEnabled": "false"
            }
          }
        },
        "protectedSettings": {}
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat('Secondary',variables('SqlVmPrefixS'), copyindex(), '/SqlIaasExtension')]",
      "location": "[parameters('secondaryLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', concat('SqlVmDeployS', copyindex()))]"
      ],
      "copy": {
        "name": "sqliaasextensionsloop",
        "count": 2
      },
      "properties": {
        "type": "SqlIaaSAgent",
        "publisher": "Microsoft.SqlServer.Management",
        "typeHandlerVersion": "1.2",
        "autoUpgradeMinorVersion": "true",
        "settings": {
          "AutoTelemetrySettings": {
            "Region": "[parameters('secondaryLocation')]"
          },
          "AutoPatchingSettings": {
            "PatchCategory": "WindowsMandatoryUpdates",
            "Enable": true,
            "DayOfWeek": "Sunday",
            "MaintenanceWindowStartingHour": "2",
            "MaintenanceWindowDuration": "60"
          },
          "KeyVaultCredentialSettings": {
            "Enable": false,
            "CredentialName": ""
          },
          "ServerConfigurationsManagementSettings": {
            "SQLConnectivityUpdateSettings": {
              "ConnectivityType": "Private",
              "Port": "1433"
            },
            "SQLWorkloadTypeUpdateSettings": {
              "SQLWorkloadType": "GENERAL"
            },
            "SQLStorageUpdateSettings": {
              "DiskCount": "1",
              "NumberOfColumns": "1",
              "StartingDeviceID": "2",
              "DiskConfigurationType": "NEW"
            },
            "AdditionalFeaturesServerConfigurations": {
              "IsRServicesEnabled": "false"
            }
          }
        },
        "protectedSettings": {}
      }
    }
  ],
  "outputs": {}
}
